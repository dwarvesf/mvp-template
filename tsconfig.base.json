{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@mvp-template/api-client/*": ["packages/api-client/*"],
      "@mvp-template/shared": ["packages/shared/src"],
      "@mvp-template/shared/*": ["packages/shared/src/*"]
    }
  }
}
